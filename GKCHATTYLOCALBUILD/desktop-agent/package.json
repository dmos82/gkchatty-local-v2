{
  "name": "gkchatty-desktop-agent",
  "version": "1.0.0",
  "description": "GKChatty Local Desktop Agent with MCP Server",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest"
  },
  "dependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.6.0",
    "chromadb": "^1.7.0",
    "better-sqlite3": "^9.0.0",
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jest": "^29.0.0"
  },
  "build": {
    "appId": "com.gkchatty.desktop",
    "productName": "GKChatty Local",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}